# ==============================================================================
# POLYMARKET MAKER BOT CONFIGURATION
# ==============================================================================

# REQUIRED - Wallet Configuration
# Your Polygon wallet private key (without 0x prefix)
WALLET_PRIVATE_KEY=your_private_key_hex_here

# REQUIRED - Market Configuration
# Format: yes-token-id,no-token-id;yes2-token-id,no2-token-id
# Each market pair is separated by semicolon
MARKETS=your-yes-token-id,your-no-token-id

# ==============================================================================
# TRADING PARAMETERS (all optional with sensible defaults)
# ==============================================================================

# Minimum USDC balance before bot shuts down (default: 50.0)
MIN_BALANCE=50.0

# Price offset from mid for limit orders (default: 0.001 = 0.1%)
OFFSET=0.001

# Maximum spread to trade in - wider spreads are skipped (default: 0.01 = 1%)
MAX_SPREAD=0.01

# ==============================================================================
# RISK MANAGEMENT
# ==============================================================================

# Maximum portfolio exposure as percentage of balance (default: 0.3 = 30%)
MAX_EXPOSURE_PCT=0.3

# Kelly criterion fraction for position sizing (default: 0.2)
KELLY_FRACTION=0.2

# Expected edge per trade (default: 0.03 = 3%)
EDGE=0.03

# Variance estimate for Kelly calculation (default: 0.01)
VARIANCE=0.01

# Exposure threshold to trigger re-hedging warning (default: 0.05 = 5%)
REHEDGE_THRESHOLD_PCT=0.05

# Estimated maker rebate rate for logging (default: 0.005 = 0.5%)
REBATE_RATE=0.005

# ==============================================================================
# VOLATILITY ADJUSTMENTS
# ==============================================================================

# Spread threshold to consider "wide" (default: 0.005 = 0.5%)
WIDE_SPREAD_THRESHOLD=0.005

# Size multiplier when spread is wide/volatile (default: 0.5)
HIGH_VOL_FACTOR=0.5

# Size multiplier when spread is narrow/calm (default: 1.5)
LOW_VOL_FACTOR=1.5

# ==============================================================================
# TIMING CONFIGURATION
# ==============================================================================

# Seconds before an open order is considered stale (default: 30)
STALE_ORDER_TIMEOUT_SECS=30

# Main loop interval in milliseconds (default: 500)
MAIN_LOOP_INTERVAL_MS=500

# API call timeout in seconds (default: 30)
API_TIMEOUT_SECS=30

# ==============================================================================
# RETRY CONFIGURATION
# ==============================================================================

# Maximum retry attempts for failed operations (default: 3)
MAX_RETRY_ATTEMPTS=3

# Maximum delay between retries in seconds (default: 32)
# Actual delay is min(2^attempt, this value)
MAX_RETRY_DELAY_SECS=32

# ==============================================================================
# MEMORY MANAGEMENT
# ==============================================================================

# Interval for cleanup task in seconds (default: 300 = 5 minutes)
CLEANUP_INTERVAL_SECS=300

# Maximum number of orders to track (default: 1000)
MAX_TRACKED_ORDERS=1000

# Maximum number of exposure entries to track (default: 100)
MAX_TRACKED_EXPOSURES=100

# ==============================================================================
# PAPER TRADING
# ==============================================================================

# Enable paper trading mode (default: false)
# When enabled, no real orders are placed - only simulated
PAPER_TRADE=false

# Starting balance for paper trading (default: 1000.0)
PAPER_STARTING_BALANCE=1000.0

# ==============================================================================
# NOTES
# ==============================================================================
# - POLYMARKET_API_KEY is NOT needed - credentials are derived from wallet
# - RPC_URLS is NOT implemented - SDK handles RPC internally
# - Set PAPER_TRADE=true to run in simulation mode without real funds
